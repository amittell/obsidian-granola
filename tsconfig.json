{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"declaration": false,
		"outDir": "./build",
		"allowSyntheticDefaultImports": true,
		"lib": ["DOM", "ES6"],
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules", "build", "dist", "**/*.test.ts", "**/*.spec.ts", "tests/**/*"]
}
